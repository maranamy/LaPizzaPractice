<Page x:Class="LaPizzaPractice.Pages.BossPages.MenuNotFun"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaPizzaPractice.Pages.BossPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuNotFun">
    <Page.Resources>
        <DataTemplate x:Key="foodCard">

            <!-- ___________КАРТОЧКА ТОВАРА______________ -->

            <Border CornerRadius="20" Height="200" Width="500" Margin="10" Background="#4C000000" BorderBrush="White" BorderThickness="1">
                <Grid>
                    <!-- 🍕 -->
                    <StackPanel Orientation="Vertical" Margin="50,5" Width="400">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="🍕"  FontSize="20" MaxHeight="40"/>
                            <TextBlock x:Name="foodName" Style="{StaticResource DefTextBlock}" Text="{Binding PizzaName}" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="🍕"  FontSize="20" MaxHeight="40"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Категория: "  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                            <TextBlock x:Name="сategory" Style="{StaticResource DefTextBlock}" Text="{Binding Category.CategoryName}"  FontSize="14" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Размер: "  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                            <TextBlock x:Name="size" Style="{StaticResource DefTextBlock}" Text="{Binding PizzaSize}"  FontSize="14" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Описание начинки: "  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                            <TextBlock x:Name="fillling" Style="{StaticResource DefTextBlock}" Text="{Binding FillingDescr}"  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Цена: "  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                            <TextBlock x:Name="price" Style="{StaticResource DefTextBlock}" Text="{Binding Price}"  TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                        </StackPanel>


                    </StackPanel>

                </Grid>

            </Border>

            <!-- ___________________________________ -->
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <!--Grid.Background>Black</Grid.Background-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="60,20">
                <Border CornerRadius="20" Width="350" Background="GhostWhite" Height="35">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Поиск" Style="{StaticResource DefTextBlock}" Foreground="#FF757575" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSearch" Width="280" Height="30" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>


        <Grid Grid.Column="0" Grid.Row="1">




            <ScrollViewer  Margin="30,10,0,0">
                <ItemsControl Name="foodItemsControl"  ItemTemplate="{StaticResource foodCard}"  HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>

                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Style="{StaticResource MenuBtn}" Background="#66FF0000" >
                    <Image Source="/main.png" Margin="2" />
                </Button>
                <Button Style="{StaticResource MenuBtn}" Click="GoToWorkers_Click">
                    <Image Source="/workers.png" RenderOptions.BitmapScalingMode="HighQuality" />
                </Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
