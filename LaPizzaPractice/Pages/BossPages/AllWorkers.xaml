<Page x:Class="LaPizzaPractice.Pages.BossPages.AllWorkers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaPizzaPractice.Pages.BossPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllWorkers">
    <Page.Resources>
        <DataTemplate x:Key="WorkerCard">
            <Border CornerRadius="20" Height="320" Width="500" Margin="10" 
            Background="#4C000000" BorderBrush="White" BorderThickness="1">
                <Grid>
                    <StackPanel Orientation="Vertical" Margin="40,20,40,20" Width="420">
                        <!-- ФИО -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="👤" FontSize="24"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Name}" 
                               FontSize="22" FontWeight="Bold" Margin="8,0,8,0"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Surname}" 
                               FontSize="22" FontWeight="Bold"/>
                        </StackPanel>


                        <!-- Роль -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Роль: " FontSize="14"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Role, TargetNullValue='Не указана'}" 
                               FontSize="14" FontWeight="Medium"/>
                        </StackPanel>

                        <!-- Телефон -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Телефон: " FontSize="14"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Phone, TargetNullValue='—'}" 
                               FontSize="14"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Email: " FontSize="14"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Email, TargetNullValue='—'}" 
                               FontSize="14"/>
                        </StackPanel>

                        <!-- Логин -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Логин: " FontSize="14"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
                               Text="{Binding Login}" 
                               FontSize="14"/>
                        </StackPanel>

                        <!-- Пароль -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Пароль: " FontSize="14"/>
                            <TextBlock Style="{StaticResource DefTextBlock}" 
       Text="{Binding Password}" 
       FontSize="14"/>
                        </StackPanel>

                    </StackPanel>

                    <!-- Кнопки действий -->
                    <Grid VerticalAlignment="Bottom" Margin="20,0,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" CornerRadius="20" Margin="0,0,8,0"
                        Background="#7F000000" BorderBrush="White" BorderThickness="1">
                            <Button Content="Удалить"
                            Background="Transparent"
                            BorderThickness="0"
                            Tag="{Binding}"
                            Foreground="White"
                            FontSize="18"
                            Cursor="Hand" 
                            Style="{StaticResource DefaultBtn}" 
                            Height="40" 
                            Click="DeleteWorker_Click"/>
                        </Border>

                        <Border Grid.Column="1" CornerRadius="20" Margin="8,0,0,0"
                        Background="#CCB20000" BorderBrush="White" BorderThickness="1">
                            <Button Content="Редактировать"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Foreground="White"
                            Tag="{Binding}"
                            FontSize="18"
                            Cursor="Hand" 
                            Style="{StaticResource DefaultBtn}" 
                            Height="40" Click="EditWorker_Click"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <!--Grid.Background>Black</Grid.Background-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>



        <Grid Grid.Column="0">


            <ScrollViewer  Margin="30,10,0,0">
                <ItemsControl Name="workerItemsControl"  ItemTemplate="{StaticResource WorkerCard}"  HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>

                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Style="{StaticResource MenuBtn}" Click="ToMain_Click" >
                    <Image Source="/main.png" Margin="2" />
                </Button>
                <Button Style="{StaticResource MenuBtn}" Background="#66FF0000">
                    <Image Source="/workers.png" RenderOptions.BitmapScalingMode="HighQuality" />
                </Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
