<Window x:Class="LaPizzaPractice.Pages.BossPages.CreateEditWorker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaPizzaPractice.Pages.BossPages"
        mc:Ignorable="d"
        Title="CreateEditWorker" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/pizza_autho.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <ScrollViewer>
            <Border Background="#4C000000" CornerRadius="20" Margin="12" BorderBrush="#4CFFFFFF" BorderThickness="1">
                <Grid Margin="30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <TextBlock Text="👤" FontSize="32" VerticalAlignment="Center"/>
                        <TextBlock Text="Редактирование сотрудника" 
                   Style="{StaticResource DefTextBlock}" 
                   FontSize="24" FontWeight="Bold" Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Основные поля -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,30">

                        <!-- Имя -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Имя *" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <TextBox x:Name="tbName"
                         FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>

                        <!-- Фамилия -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Фамилия *" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <TextBox x:Name="tbSurname" 
                         FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>


                        <!-- Роль -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Роль *" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <ComboBox x:Name="cmbRole"  
                          FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>

                        <!-- Телефон -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Телефон" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <TextBox x:Name="tbPhone"  
                         FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Email" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <TextBox x:Name="tbEmail"
                         FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>

                        <!-- Логин -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Логин *" Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <TextBox x:Name="tbLogin"  
                         FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>

                        <!-- Пароль (только при добавлении или смене) -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Пароль (оставьте пустым, если не меняете)" 
                       Style="{StaticResource DefTextBlock}" FontSize="14" Margin="0,0,0,4"/>
                            <Border CornerRadius="12" Background="#33000000" BorderBrush="#4CFFFFFF" BorderThickness="1">
                                <PasswordBox x:Name="pbPassword" 
                             FontSize="16" Padding="12,8"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border CornerRadius="20" Background="#7F000000" BorderBrush="White" BorderThickness="1" Margin="0,0,12,0">
                            <Button Content="Отмена"
                    Width="120" Height="45"
                    Background="Transparent" BorderThickness="0"
                    Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnCancel_Click"/>
                        </Border>

                        <Border CornerRadius="20" Background="#CCFF6500" BorderBrush="White" BorderThickness="1">
                            <Button Content="Сохранить"
                    Width="140" Height="45"
                    Background="Transparent" BorderThickness="0"
                    Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="BtnSave_Click"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
        
    </Grid>
</Window>
