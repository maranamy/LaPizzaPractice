<Window x:Class="LaPizzaPractice.Pages.Common.CreateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaPizzaPractice.Pages.Common"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Оформление заказа" WindowStartupLocation="CenterScreen" Height="450" Width="450">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/pizza_autho.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#9B000000">
            <TextBlock Text="Оформление заказа" Style="{StaticResource DefTextBlock}" 
                       FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1" Margin="35">
            <StackPanel>
                <Border Background="#9B000000" CornerRadius="20" Height="50" Margin="0,3">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="Пицца: " Style="{StaticResource DefTextBlock}" FontSize="20"/>
                        <ComboBox x:Name="choosePizza" Width="269" BorderBrush="White" Background="Black"/>
                    </StackPanel>
                </Border>


                <Border Background="#9B000000" CornerRadius="20" Height="50" Margin="0,3">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="Количество: " Style="{StaticResource DefTextBlock}" FontSize="20"/>
                        <ComboBox x:Name="chooseQuantity" Width="222" BorderBrush="White" Background="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="#9B000000" CornerRadius="20" Height="50" Margin="0,3">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="Адресс: " Style="{StaticResource DefTextBlock}" FontSize="20"/>
                        <TextBlock x:Name="chooseAddress" Width="270" Background="#FFF0F0F0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Grid VerticalAlignment="Bottom" Margin="5,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border CornerRadius="20" Grid.Column="0" Margin="0,0,5,0"
                        Background="#7F000000"
                        BorderBrush="White" BorderThickness="1">
                        <Button Content="Отмена"
                            Background="Transparent" 
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="18"
                            Cursor="Hand" Style="{StaticResource DefaultBtn}" Height="35" Click="Cancel_Click"/>
                    </Border>
                <Border CornerRadius="20" Grid.Column="1" Margin="5,0,0,0"
                        Background="#CCB20000"
                        BorderBrush="White" BorderThickness="1">
                    <Button Content="Заказать"
                            Background="Transparent" 
                            BorderThickness="0" FontWeight="Bold"
                             Foreground="White"
                            FontSize="19"
                            Cursor="Hand" Style="{StaticResource DefaultBtn}" Height="35" Click="Order_Click"/>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Window>
