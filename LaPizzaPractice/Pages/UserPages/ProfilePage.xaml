<Page x:Class="LaPizzaPractice.Pages.UserPages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaPizzaPractice.Pages.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical" Margin="100" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Привет, " Style="{StaticResource DefTextBlock}" FontSize="30"/>
                    <TextBlock x:Name="helloUser" Style="{StaticResource DefTextBlock}" Text="{Binding ClientAutho.ClientName}" FontSize="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20">
                    <Rectangle Width="10" VerticalAlignment="Stretch">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF6500"/>
                                <GradientStop Color="#FFFFB800" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <StackPanel Orientation="Vertical" Margin="20,10" >
                        
                        <Border Background="#19FFFFFF" BorderBrush="White" BorderThickness="1"  Height="40"  Margin="0,5">   <!-- ИМЯ КЛИЕНТА-->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Имя: " Style="{StaticResource DefTextBlock}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                                <TextBlock x:Name="userName"  Style="{StaticResource DefTextBlock}" Text="{Binding ClientAutho.ClientName}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        
                        <Border Background="#19FFFFFF" BorderBrush="White" BorderThickness="1"  Height="40"  Margin="0,5">    <!-- ФАМИЛИЯ КЛИЕНТА-->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Фамилия: " Style="{StaticResource DefTextBlock}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                                <TextBlock x:Name="userSurname"  Style="{StaticResource DefTextBlock}" Text="{Binding ClientAutho.ClientSurn}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#19FFFFFF" BorderBrush="White" BorderThickness="1"  Height="40"  Margin="0,5">    <!-- ТЕЛЕФОН КЛИЕНТА-->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Номер телефона: " Style="{StaticResource DefTextBlock}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>     
                                <TextBlock x:Name="userPhone" Text="{Binding ClientPhone}"  Style="{StaticResource DefTextBlock}"
                                       FontSize="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Style="{StaticResource MenuBtn}" Click="GoHome_Click">
                    <Image Source="/main.png" Margin="2"/>
                </Button>
                <Button Style="{StaticResource MenuBtn}" Background="#66FF0000">
                    <Image Source="/profile.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
            </StackPanel>

        </Grid>


    </Grid>
</Page>
