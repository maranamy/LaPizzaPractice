<Page x:Class="LaPizzaPractice.Pages.ShefPages.OrdersToCook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaPizzaPractice.Pages.ShefPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersToCook">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Шапка с кнопками переключения -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="20">
            <Button Content="Новые" Width="120" Click="ShowNewOrders" Style="{StaticResource MenuBtn}" Height="30"/>
            <Button Content="В процессе" Width="120"  Click="ShowInProgress" Style="{StaticResource MenuBtn}" Height="30"/>
            <Button Content="Готов к выдаче" Width="160"  Click="ShowReady" Style="{StaticResource MenuBtn}" Height="30" />
        </StackPanel>

        <!-- Основная область -->
        <Grid Grid.Row="1" Grid.Column="0">

            <Grid x:Name="gridNew" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="31*"/>
                    <ColumnDefinition Width="41*"/>
                </Grid.ColumnDefinitions>
                <!-- Здесь все карточки новых заказов -->
                <ItemsControl Name="newOrders" Grid.ColumnSpan="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="20" Height="200" Width="500" Margin="10" Background="#4C000000" BorderBrush="White" BorderThickness="1">
                                <Grid>
                                    <StackPanel Orientation="Vertical" Margin="50,5" Width="400">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Пицца: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="pizzaName" Style="{StaticResource DefTextBlock}" Text="{Binding PizzaName}" FontSize="14" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Количество: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="quantity" Style="{StaticResource DefTextBlock}" Text="{Binding Quantity}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Адрес: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="price" Style="{StaticResource DefTextBlock}" Text="{Binding FullAddress}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                        <Border CornerRadius="20" Grid.Column="1" Margin="5,0,0,0"
                                                Background="#CCB20000"
                                                BorderBrush="White" BorderThickness="1">
                                            <Button Content="Приготовить"
                                                Background="Transparent" 
                                                BorderThickness="0" FontWeight="Bold"
                                                 Foreground="White"
                                                    Tag="{Binding}"
                                                FontSize="19"
                                                Cursor="Hand" Style="{StaticResource DefaultBtn}" Height="35" Click="CookButton_Click"/>
                                        </Border>
                                    </StackPanel>
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid x:Name="gridInProgress" Visibility="Collapsed">
                <!-- карточки в процессе -->
                <ItemsControl Name="isInProgress">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="20" Height="200" Width="500" Margin="10" Background="#4C000000" BorderBrush="White" BorderThickness="1">
                                <Grid>
                                    <StackPanel Orientation="Vertical" Margin="50,5" Width="400">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Пицца: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="pizzaName" Style="{StaticResource DefTextBlock}" Text="{Binding PizzaName}" FontSize="14" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Количество: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="quantity" Style="{StaticResource DefTextBlock}" Text="{Binding Quantity}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Адрес: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="price" Style="{StaticResource DefTextBlock}" Text="{Binding FullAddress}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                        <Border CornerRadius="20" Grid.Column="1" Margin="5,0,0,0"
                                                Background="#CCB20000"
                                                BorderBrush="White" BorderThickness="1">
                                            <Button Content="Готов"
                                                    Tag="{Binding}"
                                                Background="Transparent" 
                                                BorderThickness="0" FontWeight="Bold"
                                                 Foreground="White"
                                                FontSize="19"
                                                Cursor="Hand" Style="{StaticResource DefaultBtn}" Height="35" Click="ReadyButton_Click"/>
                                        </Border>
                                    </StackPanel>
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid x:Name="gridReady" Visibility="Collapsed">
                <!-- просто карточки готовых, без кнопок -->
                <ItemsControl Name="isReady">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="20" Height="200" Width="500" Margin="10" Background="#4C000000" BorderBrush="White" BorderThickness="1">
                                <Grid>
                                    <StackPanel Orientation="Vertical" Margin="50,5" Width="400">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Пицца: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="pizzaName" Style="{StaticResource DefTextBlock}" Text="{Binding PizzaName}" FontSize="14" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Количество: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="quantity" Style="{StaticResource DefTextBlock}" Text="{Binding Quantity}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource DefTextBlock}" Text="Адрес: " TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                            <TextBlock x:Name="price" Style="{StaticResource DefTextBlock}" Text="{Binding FullAddress}" TextWrapping="Wrap" FontSize="14" MaxHeight="40"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <!-- шаблон без кнопок -->
                </ItemsControl>
            </Grid>

        </Grid>


        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,42,0,0" Grid.Row="1">
                <Button Style="{StaticResource MenuBtn}" Click="GoToMain_Click" >
                    <Image Source="/main.png" Margin="2" />
                </Button>
                <Button Style="{StaticResource MenuBtn}" Background="#66FF0000">
                    <Image Source="/order.png" RenderOptions.BitmapScalingMode="HighQuality" />
                </Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
